<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF">

    <!-- Header giả lập -->
    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#222">

        <!-- Banner nền -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/banner" />
        <!-- Chèn ảnh nền và icon sau -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="top|end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp">
        </LinearLayout>
    </FrameLayout>

    <!-- Nội dung chính -->
    <LinearLayout
        android:layout_below="@id/header"
        android:layout_above="@id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFF"
        android:paddingTop="8dp">

        <!-- Tiêu đề và See All -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Find by Category"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#222"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:textColor="#FF9800"
                android:textStyle="bold"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Danh mục ngang fake -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_category_selected"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_dell"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="DELL"
                        android:textColor="#FF9800"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_mac"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MACBOOK"
                        android:textColor="#FF9800"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/hp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HP"
                        android:textColor="#FF9800"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/asus"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="ASUS"
                        android:textColor="#FF9800"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Thêm các mục khác nếu muốn -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Fake danh sách sản phẩm dạng lưới -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnCount="2"
            android:padding="12dp"
            android:rowCount="2">

            <!-- Sản phẩm 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_product_card"
                android:layout_margin="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dell_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Dell Inspiron 16 Plus 7630"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intel® Core™ i7-13700H Intel® Iris® Xe Graphics"
                        android:textColor="#000000"
                        android:textSize="13sp"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22,900,000 đ"
                    android:textColor="#FF9800"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Sản phẩm 2 (copy block trên, đổi hình/text nếu muốn) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_product_card"
                android:layout_margin="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dell_2"/>

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="8dp"
                    android:text="Dell XPS 13 9320"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intel® Core™ i7-1260PIntel® Iris® Xe Graphics"
                        android:textColor="#090000"
                        android:textSize="13sp"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23,700,000 đ"
                    android:textColor="#FF9800"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
            <!-- Thêm sản phẩm khác nếu muốn -->
            <!-- Sản phẩm 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_product_card"
                android:layout_margin="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dell_3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginTop="8dp"
                    android:text="Dell Latitude 5530"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intel® Core™ i7-1265U     Intel Iris Xe Graphics"
                        android:textColor="#000000"
                        android:textSize="13sp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginTop="4dp"
                    android:text="19,500,000 đ"
                    android:textColor="#FF9800"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Sản phẩm 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_product_card"
                android:layout_margin="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dell_4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="Dell XPS 13-9300"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intel® Core™ i5-1035G1  Intel UHD Graphics for 10th"
                        android:textColor="#000000"
                        android:textSize="13sp"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22,900,000 đ"
                    android:textColor="#FF9800"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </GridLayout>
    </LinearLayout>

    <!-- Thanh điều hướng phía dưới giống hình mẫu, dùng ImageButton -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFF"
        android:elevation="8dp"
        android:gravity="center"
        android:weightSum="4"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/navHomeButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_home"
                app:tint="#FF9800"
                android:contentDescription="Home"/>
            <TextView
                android:id="@+id/navHomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#FF9800"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Bag -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/saleButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_shop"
                app:tint="#BDBDBD"
                android:contentDescription="Bag"/>

            <TextView
                android:id="@+id/navBagText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Shop"
                android:textColor="#FF9800"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Chat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/orderListButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_bag"
                app:tint="#BDBDBD"
                android:contentDescription="Chat"/>
            <TextView
                android:id="@+id/navChatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order"
                android:textColor="#FF9800"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/logoutButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_profile"
                app:tint="#BDBDBD"
                android:contentDescription="Profile"/>
            <TextView
                android:id="@+id/navProfileText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="#FF9800"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>